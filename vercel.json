{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "client/build" }
    },
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "server/server.js"
    },
    {
      "source": "/auth",
      "destination": "server/server.js"
    },
    {
      "source": "/sendPixel",
      "destination": "server/server.js"
    },
    {
      "source": "/cart-submit",
      "destination": "server/server.js"
    },
    {
      "source": "/",
      "methods": ["POST"],
      "destination": "server/server.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
